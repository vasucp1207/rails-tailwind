<div class="m-16">
  <h1 class="text-4xl">Articles</h1>
  <div class="">
    <ul class="text-red-600 underline mt-5 mb-5">
      <% @articles.each do |article| %>
        <li>
          <%= link_to article.title, article %>
        </li>
      <% end %>
    </ul>
    <div class="flex justify-between">
      <div class="p-2 border-2 rounded-md hover:bg-red-600 hover:text-white flex items-center justify-center border-red-600 text-red-600"><%= link_to "New Article", new_article_path %></div>
      <a class="flex items-center p-2 rounded-md bg-red-600 hover:bg-red-500 text-white" href="/">Go to home</a>
    </div>
  </div>
</div>

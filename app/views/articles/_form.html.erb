<%= form_with model: article do |form| %>
  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "outline-none  focus:outline-none w-96 !rounder-md focus:ring focus:ring-red-500 focus:ring-offset-1" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-5">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "outline-none focus:outline-none w-96 !rounder-md focus:ring focus:ring-red-500 focus:ring-offset-1" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-5 flex cursor-pointer justify-center items-center p-2 rounded-md bg-red-600 hover:bg-red-500 text-white">
    <%= form.submit %>
  </div>

  <a class="p-2 mt-3 border-2 rounded-md hover:bg-red-600 hover:text-white flex items-center justify-center border-red-600 text-red-600" href="/articles">Articles</li>
<% end %>
